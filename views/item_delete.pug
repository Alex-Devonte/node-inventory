extends layout

block content
  div(class='mx-auto text-center p-5')
    h1(class='text-6xl font-bold text-center mt-10 mb-32 md:mb-48') Delete Item
    div(class='grid grid-cols-1 md:grid-cols-2')
      div(class='flex flex-col  items-center w-full')
        p(class='text-2xl font-bold mb-5') Are you sure you want to delete this Item?
        div(class='flex flex-col md:flex-row w-full justify-evenly gap-2 mb-5')
          a(href=item.url class='text-2xl hover:underline text-slate-950') No don't delete
          form(method='POST')
            input(type='hidden' name='itemid' value=item._id)
            button(type='submit' class='text-red-600 hover:underline text-2xl') Delete
    
      div(class='border-2 border-slate-950 p-5 bg-slate-800 text-slate-50 rounded-lg shadow-2xl')
        p(class='text-4xl font-bold mb-4') #{title}
        p(class='text-2xl italic mb-4') #{item.description}
        if item.img
          div(class='flex justify-center')
            img(src='/'+item.img alt='Image Description' class='w-1/2')
        else
          div(class='flex justify-center')
            img(src='/images/placeholder.jpg' alt='Image Description' class='w-1/2')

