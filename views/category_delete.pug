extends layout

block content
  div(class='mx-auto text-center p-5')
    h1(class='text-6xl font-bold text-center mt-10 mb-32 md:mb-48') #{title}
    div(class='border-2 border-slate-950 p-5')
      h1(class='text-6xl mb-5') #{category.name}
      if categoryItems.length
        p(class='font-bold text-xl mb-2') You must remove all items before deleting a category
        h4(class='text-xl underline') Items
        hr
        ul(class='grid sm:grid-cols-2 md:grid-cols-3 m-3 gap-5')
          each item in categoryItems
            li(class='p-2 text-lg')
              a(href=item.url class='text-slate-950 hover:underline') #{item.name}
      else
        p(class='font-bold') Are you sure you want to delete this category?
        div(class='flex flex-col sm:flex-row justify-evenly p-5 text-lg')
          a(href=category.url class='hover:underline text-slate-950') No don't delete
          form(method='POST')
            input(type='hidden' name='categoryid' value=category._id)
            button(type='submit' class='text-red-600 hover:underline') Delete
